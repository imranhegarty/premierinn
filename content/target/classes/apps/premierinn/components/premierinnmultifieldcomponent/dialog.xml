<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Multi Field"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <multifieldpanelwidget
                        jcr:primaryType="cq:Widget"
                        hideLabel="false"
                        name="./multifieldpanelwidget"
                        title="Multi Field Panel Widget"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            border="true"
                            hideLabel="true"
                            layout="form"
                            xtype="multi-field-panel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <title
                                    jcr:primaryType="cq:Widget"
                                    dName="title"
                                    fieldLabel="Title"
                                    width="600"
                                    xtype="textfield"/>
                                <richtextarea
                                    jcr:primaryType="cq:Widget"
                                    dName="richtextarea"
                                    fieldLabel="Rich Text Area"
                                    width="600"
                                    height="50"
                                    xtype="textarea"/>
                                <images
                                        jcr:primaryType="cq:Widget"
                                        fieldDescription="Click the '+' to add a new image. Drag images out of the DAM in the left hand column"
                                        fieldLabel="Images"
                                        name="./imagePaths"
                                        xtype="multifield">
                                    <fieldConfig
                                            jcr:primaryType="cq:Widget"
                                            width="155"
                                            xtype="pathfield"
                                            rootPath="/content/dam"/>
                                </images>
                            </items>
                        </fieldConfig>
                    </multifieldpanelwidget>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>

